# Server Configuration
PORT=8080
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Database
DATABASE_URL=./valuai.db

# SMS Configuration (for phone verification)
# In production, configure with actual SMS service credentials
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (for email verification and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# API Configuration
API_BASE_URL=http://localhost:8080/api

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Report Generation
REPORTS_DIR=./reports

# Development
PING_MESSAGE=ValuAI API is running!

# External APIs (for market data, if integrated)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
CRUNCHBASE_API_KEY=your-crunchbase-key
